{% block title %}{{ partner.name }}{% endblock %}

{% block meta_description partner.bio %}

{% block content %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('partners') }}">Partners</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ partner.name }}</li>
        </ol>
    </nav>

    <div class="card mb-4 box-shadow">
        <a href="{{ partner.url }}" target="_blank" rel="noopener noreferrer"><img class="card-img-top" height="100" src="{{ partner.logo }}" alt="{{ partner.name }}"></a>

        <div class="card-body">
            <p class="card-text">{{ partner.bio }}</p>

            <a href="{{ partner.url }}?utm_source=doctrine&utm_medium=website&utm_campaign=partners" target="_blank" rel="noopener noreferrer" class="btn btn-primary" data-ga-category="partners" data-ga-action="click" data-ga-label="{{ partner.name }}">Visit Website</a>
        </div>

        <div class="card-header">
            {{ partner.details.label }}
        </div>

        <ul class="list-group list-group-flush">
            {% for item in partner.details.items %}
                <li class="list-group-item">{{ item }}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
